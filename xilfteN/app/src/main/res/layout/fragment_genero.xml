<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentRecyclerGenerosNavigationViewXML"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Negro"
    android:orientation="vertical"
    tools:context="com.trabajo_integrador.xilften.view.DetalleActivity">

    <TextView
        android:id="@+id/fragment_gener_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/Blanco"
        android:textSize="24sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerFragmentGenerosNavigationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>